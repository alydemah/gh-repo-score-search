{
  "compilerOptions": {

    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["node", "jest"],

    /* Module resolution */
    "moduleResolution": "node",

    /* Type safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Output */
    "sourceMap": true,

    /* Interop */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}